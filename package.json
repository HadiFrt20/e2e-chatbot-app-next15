{
  "name": "databricks/e2e-chatbot-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "biome lint --write --unsafe && biome format --write",
    "format": "biome format --write",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:reset": "tsx scripts/reset-database.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:check": "drizzle-kit check",
    "db:up": "drizzle-kit up",
    "test": "npm run test:with-db && npm run test:ephemeral",
    "test:with-db": "PLAYWRIGHT=True TEST_MODE=with-db npx playwright test",
    "test:ephemeral": "PLAYWRIGHT=True TEST_MODE=ephemeral npx playwright test"
  },
  "dependencies": {
    "@ai-sdk/react": "^2.0.76",
    "@chat-template/ai-sdk-providers": "workspace:*",
    "@chat-template/auth": "workspace:*",
    "@chat-template/core": "workspace:*",
    "@chat-template/db": "workspace:*",
    "@chat-template/utils": "workspace:*",
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@radix-ui/react-use-controllable-state": "^1.2.2",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.19",
    "ai": "5.0.76",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.44.6",
    "fast-deep-equal": "^3.1.3",
    "framer-motion": "^11.3.19",
    "lucide-react": "^0.446.0",
    "next": "^15.5.9",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-syntax-highlighter": "^16.1.0",
    "sonner": "^1.5.0",
    "streamdown": "^1.4.0",
    "swr": "^2.2.5",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^4.1.13",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.1",
    "use-stick-to-bottom": "^1.1.1",
    "usehooks-ts": "^3.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@ai-sdk/provider": "^2.0.0",
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.8.6",
    "@types/react": "^19.0.0-rc.1",
    "@types/react-dom": "^19.0.0-rc.1",
    "msw": "^2.11.6",
    "tsdown": "0.15.9",
    "typescript": "^5.9.3"
  }
}
